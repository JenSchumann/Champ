<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-striped table-hover centered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="active"><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.published %></td>
        <td><button class="btn btn-success"><%= link_to 'Show', post %></button></td>
        <td><button class="btn btn-primary"><%= link_to 'Edit', edit_post_path(post) %></button></td>
        <td><button class="btn btn-error"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<button class="btn btn-primary centered"><%= link_to 'New Post', new_post_path %></button>
